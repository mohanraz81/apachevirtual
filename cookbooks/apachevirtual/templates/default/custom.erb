<% if @port != 80 -%>
  Listen <%= @port %>
<% end -%>

<VirtualHost *:<%= @port %>>
  ServerAdmin webmaster@localhost

  DocumentRoot /var/www/html/<%= @document_root %>
  <Directory />
	Options FollowSymLinks
	AllowOverride None
  </Directory>
  <Directory /var/www/html/<%= @document_root %>>
	Options Indexes FollowSymLinks MultiViews
	AllowOverride None
	Order allow,deny
	allow from all
	</Directory>
</VirtualHost>
